{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["ESNext"],
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules"]
}
